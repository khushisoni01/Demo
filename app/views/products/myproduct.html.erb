<h1>Products</h1>
<%= link_to 'New', new_product_path, class: 'button' %>
<% @products.each do |product| %>
  <% if product.account.id == current_account.id %>
    <p>Name: <%= product.account.name %></p>
    <p>Price: <%= product.price %></p>
    <p>Description: <%= product.description %></p>
    <% if product.picture.attached? %>
      <%= image_tag product.picture %>
    <% end %>
    <%= link_to 'Show', product_path(product), class: 'button' %>
    <%= link_to 'Edit', edit_product_path(product), class: 'button' %>
    <%= link_to 'Delete', product_path(product), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this post?' }, class: 'button' %>
  <% end %>
<% end %>



