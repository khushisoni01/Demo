<div class="row">
  <div class="col-md-2">
    <h5> Hi <%= @current_account.name %> </h5>
    <h4> Accounts </h4>
    <div>
      <%= turbo_stream_from "accounts" %>
      <div id="accounts">
        <%= render @accounts %>
      </div>
    </div>
    <h4> Rooms </h4>
    <%= render partial: "layouts/new_room_form" %>
    <div>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
  </div>
  <div class="col-md-10 bg-dark text-light">
  <% if @single_room %>

  <%= turbo_stream_from @single_room %>
<div id="messages">
   <%= render @messages %>
</div>
<%= render partial: 'layouts/new_message_form' %>

    <h4 class="text-center"> <%= @single_room.name %> </h4>
  <% end %>
</div>
</div>